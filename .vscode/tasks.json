{
	"version": "2.0.0",
	"inputs": [
		{
		  "id": "filename",
		  "type": "promptString",
		  "description": "Enter the C++ filename (without extension)",
		  "default": "main"
		}
	  ],
	"tasks": [
		{
			"label": "C/C++: g++ build, run and compare output",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"g++ -std=c++11 \"${fileBasename}\" -o \"${fileBasenameNoExtension}.out\" && \"./${fileBasenameNoExtension}.out\" < input.txt > output.txt && if cmp -s output.txt expected.txt; then echo -e \"\\033[32mTEST CASE PASSED ✅\\033[0m\"; else echo -e \"\\033[31mTEST CASE FAILED ❌\\033[0m\"; fi && rm -f \"${fileBasenameNoExtension}.out\""
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++, run output and compare with expected.txt",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"close": false
			}
		}
		,
		{
			"label": "Create C++ file with boilerplate",
			"type": "shell",
			"command": "bash",
			"args": [
			  "-c",
			  "mkdir -p \"${input:filename}\" && cp .vscode/boilerplate.txt \"${input:filename}/main.cpp\" && code \"${input:filename}/main.cpp\" && touch \"${input:filename}/input.txt\" \"${input:filename}/expected.txt\" \"${input:filename}/output.txt\""
			],
			"group": {
			  "kind": "build",
			  "isDefault": false
			},
			"problemMatcher": [],
			"presentation": {
			  "echo": true,
			  "reveal": "always",
			  "focus": true,
			  "panel": "dedicated",
			  "close": true
			}
		  }		
	]
  }
  